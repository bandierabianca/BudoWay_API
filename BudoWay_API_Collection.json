{
  "info": {
    "name": "BudoWay API",
    "_postman_id": "budoway-api-collection",
    "description": "Test CRUD per BudoWay API con autenticazione JWT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 1,\n  \"email\": \"test@example.com\",\n  \"password\": \"mypassword\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.access_token) { pm.environment.set(\"jwt_token\", jsonData.access_token); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/token",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "token"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 1,\n  \"email\": \"test@example.com\",\n  \"password\": \"mypassword\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.access_token) { pm.environment.set(\"jwt_token\", jsonData.access_token); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Events - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/events",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "events"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"location\": \"Dojo Central\",\n  \"date_event\": \"2025-08-20T18:00:00\",\n  \"description\": \"Allenamento speciale\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Events - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/events",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "events"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Events - Get",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/events/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "events",
            "1"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Users - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "users"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Users - Get",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "users",
            "1"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "jwt_token",
      "value": ""
    }
  ]
}